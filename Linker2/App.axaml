<Application
    x:Class="Linker2.App"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    RequestedThemeVariant="Dark">
    <!--  "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options.  -->

    <Application.Styles>
        <FluentTheme />

        <Style Selector="Button.Normal">
            <Setter Property="Width" Value="100" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
        </Style>

        <Style Selector="Button.Icon">
            <Setter Property="FontSize" Value="10" />
            <Setter Property="Width" Value="35" />
            <Setter Property="Height" Value="25" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
        </Style>

		<Style Selector="Button.RatingIcon">
			<Setter Property="FontSize" Value="18" />
			<Setter Property="Width" Value="35" />
			<Setter Property="Height" Value="30" />
			<Setter Property="HorizontalContentAlignment" Value="Center" />
			<Setter Property="VerticalContentAlignment" Value="Center" />
			<Setter Property="Foreground" Value="rgb(255, 153, 0)"/>
		</Style>

		<Style Selector="Button.Clear">
            <Setter Property="FontSize" Value="10" />
            <Setter Property="Width" Value="30" />
            <Setter Property="Height" Value="30" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="Content" Value="&#128473;" />
        </Style>

		<Style Selector="TextBlock.Rating">
			<Setter Property="Foreground" Value="rgb(255, 153, 0)"/>
		</Style>

		<Style Selector="TextBlock.CachedFile">
			<Setter Property="FontSize" Value="30" />
		</Style>

		<Style Selector="ToggleButton">
			<Style Selector="^:checked /template/ ContentPresenter#PART_ContentPresenter">
				<Setter Property="Background" Value="rgb(255, 153, 0)"/>
			</Style>
		</Style>
    </Application.Styles>
</Application>
